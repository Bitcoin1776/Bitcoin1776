## </param>
#
interface(`jfkbitcoin1776_read_lib_files',`
	gen_require(`
		type jfkbitcoin1776_var_lib_t;
	')

	files_search_var_lib($1)
	read_files_pattern($1, jfkbitcoin1776_var_lib_t, jfkbitcoin1776_var_lib_t)
')

########################################
