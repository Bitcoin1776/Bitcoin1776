
## <summary>policy for jfkbitcoin1776</summary>


########################################
## <summary>
##	Transition to jfkbitcoin1776.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`jfkbitcoin1776_domtrans',`
	gen_require(`
		type jfkbitcoin1776_t, jfkbitcoin1776_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, jfkbitcoin1776_exec_t, jfkbitcoin1776_t)
')


########################################
## <summary>
##	Execute jfkbitcoin1776 server in the jfkbitcoin1776 domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`jfkbitcoin1776_initrc_domtrans',`
	gen_require(`
		type jfkbitcoin1776_initrc_exec_t;
	')

	init_labeled_script_domtrans($1, jfkbitcoin1776_initrc_exec_t)
')


########################################
## <summary>
##	Search jfkbitcoin1776 lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`jfkbitcoin1776_search_lib',`
	gen_require(`
		type jfkbitcoin1776_var_lib_t;
	')

	allow $1 jfkbitcoin1776_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

########################################
