	manage_dirs_pattern($1, jfkbitcoin1776_var_lib_t, jfkbitcoin1776_var_lib_t)
')


########################################
## <summary>
##	All of the rules required to administrate
##	a jfkbitcoin1776 environment
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`jfkbitcoin1776_admin',`
	gen_require(`
		type jfkbitcoin1776_t;
		type jfkbitcoin1776_initrc_exec_t;
		type jfkbitcoin1776_var_lib_t;
	')

	allow $1 jfkbitcoin1776_t:process { ptrace signal_perms };
	ps_process_pattern($1, jfkbitcoin1776_t)

	jfkbitcoin1776_initrc_domtrans($1)
	domain_system_change_exemption($1)
	role_transition $2 jfkbitcoin1776_initrc_exec_t system_r;
	allow $2 system_r;

	files_search_var_lib($1)
	admin_pattern($1, jfkbitcoin1776_var_lib_t)

')

